generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models
model User {
  id          Int      @id @default(autoincrement())
  username    String
  password    String
  name        String
  surname     String
  email       String   @unique
  photo       String?
  phone       String?
  description String?
  personal_id String?
  rating      Float?
  role        Role     @default(CUSTUMER)
  key         String
  active      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  services Service[]

  @@map("users")
}

enum Role {
  ADMIN
  CUSTUMER
  SUPPLIER
}

model ServiceType {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  url_image   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  services Service[]

  @@map("service_types")
}

model Service {
  id           Int      @id @default(autoincrement())
  description  String
  hourly_price Float?
  rating       Float?
  reviews      Float?
  times_hired  Float?
  shown        Boolean  @default(true)
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user_id         Int
  user            User        @relation(fields: [user_id], references: [id])
  service_type_id Int
  service_type    ServiceType @relation(fields: [service_type_id], references: [id])

  @@map("services")
}
