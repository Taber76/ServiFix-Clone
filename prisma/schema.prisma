generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models
model User {
  id        Int      @id @default(autoincrement())
  username  String
  password  String
  name      String
  surname   String
  email     String   @unique
  role      Role     @default(SUPPLIER)
  active    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum Role {
  ADMIN
  CUSTUMER
  SUPPLIER
}
