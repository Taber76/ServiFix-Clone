generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models
model User {
  id          Int      @id @default(autoincrement())
  username    String
  password    String
  name        String
  surname     String
  email       String   @unique
  photo       String?
  phone       String?
  description String?
  personal_id String?
  rating      Float?
  role        Role     @default(CUSTUMER)
  active      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("users")
}

enum Role {
  ADMIN
  CUSTUMER
  SUPPLIER
}
